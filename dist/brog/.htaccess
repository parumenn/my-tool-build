
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /brog/

    # Allow access to existing files (css, js, images, api.php)
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Rewrite all other routes to index.html
    RewriteRule ^ index.html [L]
</IfModule>
