
DirectoryIndex index.html

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /brog/

    # Allow access to existing files (css, js, images, api.php)
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Rewrite all other routes to index.html
    # "." matches any character, effectively catching all non-file/non-dir requests
    RewriteRule . index.html [L]
</IfModule>
