
DirectoryIndex index.html

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /brog/

    # Simply serve files if they exist, otherwise let the browser handle it or serve index.html for root
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Fallback to index.html for SPA routing (optional for HashRouter but good practice)
    RewriteRule . index.html [L]
</IfModule>
