
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # index.php を最優先にする
  DirectoryIndex index.php

  # /brog および /freebord ディレクトリ以下はSPAのリライト対象から完全に除外する
  RewriteCond %{REQUEST_URI} ^/(brog|freebord) [NC]
  RewriteRule ^ - [L]

  # 本物のアプリファイルへの直接アクセスを禁止
  RewriteRule ^app_view\.html$ - [F,L]

  # index.html へのリクエストはルート（index.php経由）へリダイレクト
  RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+index\.html [NC]
  RewriteRule ^index\.html$ / [R=301,L]

  # 存在するファイルやディレクトリへのアクセスはリライトせずそのまま通す
  # ただし index.html, app_view.html は除外（index.php に処理させるため）
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteCond %{REQUEST_FILENAME} !/index\.html$
  RewriteCond %{REQUEST_FILENAME} !/app_view\.html$
  RewriteRule ^ - [L]

  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # それ以外はすべて index.php (SPA) にルーティング
  RewriteRule . index.php [L]
</IfModule>

# --- 強力な圧縮設定 (Gzip) ---
<IfModule mod_deflate.c>
  SetOutputFilter DEFLATE
  BrowserMatch ^Mozilla/4 gzip-only-text/html
  BrowserMatch ^Mozilla/4\.0[678] no-gzip
  BrowserMatch \bMSI[E] !no-gzip !gzip-only-text/html

  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/xml
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE application/xhtml+xml
  AddOutputFilterByType DEFLATE application/rss+xml
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/x-javascript
  AddOutputFilterByType DEFLATE application/json
  AddOutputFilterByType DEFLATE image/svg+xml
  AddOutputFilterByType DEFLATE image/x-icon
</IfModule>

# --- ブラウザキャッシュ設定 ---
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 month"
  ExpiresByType text/html "access plus 0 seconds"
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  ExpiresByType image/gif "access plus 1 month"
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType image/webp "access plus 1 month"
  ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
</IfModule>
